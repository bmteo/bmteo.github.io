<section id="contact" class="section">
    <div class="container">
        <h2 class="section-title">Let's Connect</h2>
        <p class="section-subtitle">Have a question or just want to say hi?</p>

        <div class="contact-card">
            <div class="contact-group">
                <h3>Reach out at:</h3>
                <div class="email-container">
                    <div class="email-box">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="icon"
                            ><rect width="20" height="16" x="2" y="4" rx="2"
                            ></rect><path
                                d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                            ></path></svg
                        >
                        <span id="email-text">contact.bmteo@gmail.com</span>
                        <button
                            id="copy-btn"
                            class="copy-btn"
                            aria-label="Copy email"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="icon"
                                ><rect
                                    width="14"
                                    height="14"
                                    x="8"
                                    y="8"
                                    rx="2"
                                    ry="2"></rect><path
                                    d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"
                                ></path></svg
                            >
                        </button>
                    </div>
                </div>
            </div>

            <div class="contact-group">
                <h3>Or find me on:</h3>
                <div class="social-links">
                    <a
                        href="https://github.com/bmteo"
                        target="_blank"
                        class="social-btn"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="icon"
                            ><path
                                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                            ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
                        >
                        <span>GitHub</span>
                    </a>
                    <a
                        href="https://linkedin.com/in/bmteo"
                        target="_blank"
                        class="social-btn"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="icon"
                            ><path
                                d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                            ></path><rect width="4" height="12" x="2" y="9"
                            ></rect><circle cx="4" cy="4" r="2"></circle></svg
                        >
                        <span>LinkedIn</span>
                    </a>
                </div>
            </div>
        </div>

        <footer class="footer">
            <p>
                Built with Astro. &copy; {new Date().getFullYear()} Benjamin Teo.
            </p>
        </footer>
    </div>
</section>

<script>
    const copyBtn = document.getElementById("copy-btn");
    const emailText = document.getElementById("email-text");

    if (copyBtn && emailText) {
        copyBtn.addEventListener("click", async () => {
            try {
                await navigator.clipboard.writeText(emailText.innerText);

                // Visual feedback
                const originalIcon = copyBtn.innerHTML;
                copyBtn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>`;
                copyBtn.classList.add("copied");

                setTimeout(() => {
                    copyBtn.innerHTML = originalIcon;
                    copyBtn.classList.remove("copied");
                }, 2000);
            } catch (err) {
                console.error("Failed to copy:", err);
            }
        });
    }
</script>

<style>
    .section {
        padding: 8rem 1.5rem 6rem;
        max-width: var(--spacing-container);
        margin: 0 auto;
        text-align: center;
    }

    .section-title {
        font-size: 4rem;
        margin-bottom: 1rem;
        color: var(--color-accent);
        font-family: var(--font-heading);
    }

    .section-subtitle {
        color: var(--color-text-secondary);
        margin-bottom: 6rem;
        font-family: var(--font-body);
        font-size: 1.1rem;
    }

    .contact-card {
        border: 2px solid var(--color-accent);
        border-radius: 20px;
        padding: 5rem 3rem;
        max-width: 800px;
        margin: 0 auto;
        background: rgba(40, 40, 40, 0.4);
    }

    .contact-group {
        margin-bottom: 5rem;
    }

    .contact-group:last-child {
        margin-bottom: 0;
    }

    h3 {
        font-family: var(--font-heading);
        font-size: 1.8rem;
        color: var(--color-text-primary);
        margin-bottom: 2.5rem;
        opacity: 0.9;
        letter-spacing: 1px;
    }

    .email-container {
        display: flex;
        justify-content: center;
        margin-bottom: 1rem;
    }

    .email-box {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 1.5rem 2rem;
        border: 2px dashed var(--color-text-secondary); /* Dashed border for the box itself */
        border-radius: 12px;
        background: transparent;
        color: var(--color-text-primary);
        font-family: var(--font-body);
        width: 100%;
        max-width: 550px;
        transition: all 0.2s;
        font-size: 1.1rem;
    }

    .email-box:hover {
        border-color: var(--color-accent);
        background: rgba(255, 255, 255, 0.02);
    }

    .copy-btn {
        background: none;
        border: none;
        color: var(--color-text-secondary);
        cursor: pointer;
        padding: 8px;
        border-radius: 6px;
        transition: all 0.2s;
        margin-left: auto;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .copy-btn:hover {
        color: var(--color-text-primary);
        background: rgba(255, 255, 255, 0.1);
        transform: scale(1.1);
    }

    .copy-btn.copied {
        color: var(--color-accent);
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .social-btn {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem 2rem;
        border: 2px solid var(--color-text-secondary);
        border-radius: 12px;
        color: var(--color-text-primary);
        font-family: var(--font-body);
        font-weight: 500;
        font-size: 1.1rem;
        transition: all 0.2s;
        background: transparent;
    }

    .social-btn:hover {
        border-color: var(--color-accent);
        transform: translateY(-4px);
        background: rgba(255, 255, 255, 0.05);
    }

    .icon {
        flex-shrink: 0;
    }

    .footer {
        color: var(--color-text-secondary);
        font-size: 0.9rem;
        padding-top: 4rem;
        margin-top: 4rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    @media (max-width: 600px) {
        .section {
            padding: 4rem 1rem 2rem;
        }

        .contact-card {
            padding: 3rem 1.5rem;
        }

        .email-box {
            padding: 1rem;
            font-size: 0.9rem;
            gap: 0.8rem;
        }

        .social-links {
            flex-direction: column;
            align-items: stretch;
            max-width: 300px;
            margin: 0 auto;
        }

        .social-btn {
            justify-content: center;
        }
    }
</style>
