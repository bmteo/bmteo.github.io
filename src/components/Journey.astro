---
const journeyItems = [
    {
        role: "Senior Software Engineer",
        company: "Amazon",
        period: "May 2024 - Present",
        details: [
            "Worked on internal case relationship detection system connecting 200+ business units; scaled project team from 1 to 6 engineers.",
        ],
    },
    {
        role: "Software Development Engineer II",
        company: "Amazon",
        period: "July 2020 - April 2024",
        details: [
            "Developed a fraud investigation platform and maintained case management systems.",
        ],
    },
    {
        role: "Bachelor of Commerce, CS & Business",
        company: "University of British Columbia",
        period: "2018",
        details: ["Vancouver, Canada"],
    },
];
---

<section id="journey" class="section">
    <div class="container">
        <h2 class="section-title">Work Experience</h2>

        <div class="timeline">
            {
                journeyItems.map((item, index) => (
                    <div class="timeline-item">
                        <div class="timeline-marker" />
                        <div class="timeline-content">
                            <div class="header">
                                <h3>{item.role}</h3>
                                <span class="company">{item.company}</span>
                                <span class="period">{item.period}</span>
                            </div>
                            <ul class="details">
                                {item.details.map((detail) => (
                                    <li>{detail}</li>
                                ))}
                            </ul>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .section {
        padding: 6rem 1.5rem;
        max-width: var(--spacing-container);
        margin: 0 auto;
    }

    .section-title {
        font-size: 3.5rem;
        margin-bottom: 4rem;
        color: var(--color-text-primary);
    }

    .timeline {
        position: relative;
        border-left: 1px solid var(--color-text-secondary);
        margin-left: 10px;
        padding-left: 40px;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 5rem;
    }

    .timeline-marker {
        position: absolute;
        left: -46px;
        top: 8px;
        width: 12px;
        height: 12px;
        background: var(--color-text-primary);
        border-radius: 50%;
        z-index: 1;
    }

    .header {
        margin-bottom: 1rem;
    }

    h3 {
        font-size: 2rem;
        color: var(--color-text-primary);
        margin-bottom: 0.2rem;
        line-height: 1.2;
    }

    .company {
        font-size: 1.2rem;
        color: var(--color-text-secondary);
        display: block;
        font-weight: 500;
    }

    .period {
        font-size: 0.9rem;
        color: var(--color-text-secondary);
        font-style: italic;
        display: block;
        margin-top: 0.2rem;
    }

    .details {
        list-style: none;
        margin-top: 1.5rem;
    }

    .details li {
        font-size: 1rem;
        color: var(--color-text-primary);
        margin-bottom: 0.8rem;
        line-height: 1.6;
        position: relative;
        padding-left: 1.5rem;
    }

    .details li::before {
        content: "-";
        position: absolute;
        left: 0;
        color: var(--color-text-secondary);
    }
</style>
